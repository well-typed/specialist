packages:
    .
  , ../specialist.cabal
  , ./cabal/*/*.cabal

allow-newer:
  *:*

profiling: True
package *
  profiling-detail: late
  ghc-options:
    -finfo-table-map
    -fdistinct-constructor-tables

program-options
  ghc-options:
    -finfo-table-map
    -fdistinct-constructor-tables
    -ddump-specialisations
    -ddump-simpl
    -ddump-to-file
    -fplugin-opt=GHC.Specialist:f:1.0
    -fplugin-opt=GHC.Specialist:v
